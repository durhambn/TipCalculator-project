<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" >
        <shape>
            <gradient
                android:startColor="@color/buttonCalc"
                android:endColor="@color/buttonCalc"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/buttonCalc" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:endColor="@android:color/darker_gray"
                android:startColor="@android:color/darker_gray"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@android:color/darker_gray" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

        </shape>
    </item>


</selector>